<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSelected">@color/colorSelected</item>
    </style>

    <!--TOOLBAR STYLES-->
    <style name="toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/toolbar.menu</item>
    </style>

    <style name="toolbar.menu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?android:colorForeground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--TRANSITION STYLES-->
    <style name="TransitionStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--TEXT STYLES-->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Subhead">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Body1.Inverse">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="Text.Headline.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Text.Subhead.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
</resources>