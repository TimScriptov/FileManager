<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Appearance">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_icon"
            android:title="Use circular icons" />

    </PreferenceCategory>

    <PreferenceCategory android:title="General">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_extension"
            android:summary="For known file types"
            android:title="Hide extensions" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_date"
            android:title="Show last modified" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_size"
            android:title="Show file sizes" />

    </PreferenceCategory>

</PreferenceScreen>